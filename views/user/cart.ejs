<style>
    .cart__close {
    text-align: center; /* Center-align the close icon */
    cursor: pointer; /* Change cursor to pointer for better UX */
}

.close-icon {
    transition: color 0.3s; /* Transition for hover effect */
}

.close-icon:hover {
    color: darkred; /* Change color on hover */
}
.cart-table {
    width: 100%;
    border-collapse: collapse; /* Merges borders between cells */
}

.cart-table th, .cart-table td {
    padding: 12px; /* Adds space inside the cells */
    text-align: left; /* Aligns text to the left */
    border-bottom: 1px solid #ddd; /* Adds a border below each row */
}

.cart-table th {
    background-color: #f8f8f8; /* Light background for headers */
    font-weight: bold; /* Bold text for headers */
}

.cart-table tr:hover {
    background-color: #f1f1f1; /* Changes background on hover for rows */
}

.cart__close {
    text-align: center; /* Centers the remove icon */
}

.cart-product-quantity {
    display: flex; /* Uses flexbox for better alignment */
    align-items: center; /* Centers items vertically */
}


</style>
<body>
    <!-- Page Preloder -->
    <%- include('../partials/header') %>
    

    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__text">
                        <h4>Shopping Cart</h4>
                        <div class="breadcrumb__links">
                            <a href="/">Home</a>
                            <a href="/shop">Shop</a>
                            <span>Shopping Cart</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->

    <!-- Shopping Cart Section Begin -->
    <section class="shopping-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="shopping__cart__table">
                        <table style="width: 100%; margin: 20px 0; border-collapse: collapse;">
                            <thead>
                                <tr style="background-color: #f2f2f2; text-align: left;">
                                    <th style="padding: 10px; font-weight: bold;">Product</th>
                                    <th style="padding: 10px; font-weight: bold;">Price</th>
                                    <th style="padding: 10px; font-weight: bold;">Quantity</th>
                                    <th style="padding: 10px; font-weight: bold;">Total</th>
                                    <th style="padding: 10px;"></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (cartItems.length > 0) { %>
                                    <% cartItems.forEach(item => { %>
                                        <% if (item.productId && item.productId.productImage && item.productId.productImage.length > 0) { %>
                                            <tr style="background-color: #fff; text-align: left;">
                                                <td class="product__cart__item" style="padding: 10px;">
                                                    <div class="product__cart__item__pic">
                                                        <img src="/uploads/product-images/<%= item.productId.productImage[0] %>" alt="<%= item.productId.productName %>" style="width: 50px; height: 50px;" />
                                                    </div>
                                                    <div class="product__cart__item__text">
                                                        <h6 style="margin: 0;"><%= item.productId.productName %></h6>
                                                    </div>
                                                </td>
                                                <td style="padding: 10px;">₹<%= item.productId.salePrice.toFixed(2) %></td> 
                                                <td class="quantity-col" style="padding: 10px;">
                                                    <div class="cart-product-quantity">
                                                        <input 
                                                            type="number" 
                                                            class="form-control quantity-input" 
                                                            value="<%= item.quantity %>" 
                                                            data-stock="<%= item.productId.quantity %>" 
                                                            data-productid="<%= item.productId._id %>" 
                                                            data-price="<%= item.productId.salePrice %>" <!-- Corrected price data --
                                                            onchange="updateCart(this)" 
                                                            required 
                                                            min="1" 
                                                            style="width: 60px; text-align: center;"
                                                        >
                                                    </div>
                                                </td>
                                                <td class="total-price" style="padding: 10px;">
                                                    ₹<span class="item-total" id="total-<%= item.productId._id %>"><%= (item.productId.salePrice * item.quantity).toFixed(2) %></span> 
                                                </td>
                                                <td class="cart__close" style="padding: 10px;">
                                                    <i class="fa fa-close" 
                                                       style="cursor: pointer;" 
                                                       onclick="removeProduct('<%= item.productId._id %>')"></i> 
                                                </td>
                                            </tr>
                                        <% } %>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="5" style="padding: 10px; text-align: center;">Your cart is empty.</td>
                                    </tr>
                                <% } %>
                            </tbody>
                            
                        </table>
                        
                        
                        
                        
                        
                        
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="continue__btn">
                                <a href="/shop">Continue Shopping</a>
                            </div>
                        </div>
                       
                    </div>
                </div>
                <div class="col-lg-4">
                    <!-- <div class="cart__discount">
                        <h6>Discount codes</h6>
                        <form action="#">
                            <input type="text" placeholder="Coupon code">
                            <button type="submit">Apply</button>
                        </form>
                    </div> -->
                    <div class="cart__total">
                        <h6>Cart total</h6>
                        <ul>
                            <li>Subtotal <span class="subtotal">₹ <%= subtotal.toFixed(2) %></span></li>
                            <% if (shippingCharge > 0) { %>
                                <li>Shipping Charges <span class="shipping-charge">₹ <%= shippingCharge.toFixed(2) %></span></li>
                            <% } else { %>
