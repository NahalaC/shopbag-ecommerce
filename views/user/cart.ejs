    <script>
        function checkQuantity(inputElement) {
            const maxQuantity = 3; 
            const currentQuantity = parseInt(inputElement.value, 10);
            
            console.log("Current Quantity: ", currentQuantity);
        
           
            if (currentQuantity > maxQuantity) {
               
                Swal.fire({
                    icon: 'error',
                    title: 'Limit Exceeded',
                    text: `You can only order up to ${maxQuantity} items at a time.`
                }).then(() => {
                    inputElement.value = maxQuantity; 
                    updateCart(inputElement); 
                });
            } else {
               
                updateCart(inputElement);
            }
        }
        
        function updateCart(inputElement) {
    const quantityInput = inputElement;
    const productId = quantityInput.getAttribute("data-productid");
    const stockQuantity = parseInt(quantityInput.getAttribute("data-stock"), 10);
    const newQuantity = parseInt(quantityInput.value, 10);
    const pricePerItem = parseFloat(quantityInput.getAttribute("data-price")); 


    if (newQuantity > 3) {
        quantityInput.value = 3; 
        Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: "Can't order more than 3 at a time.",
        });
        return; 
    }

   
    const totalPrice = newQuantity * pricePerItem;
    const totalPriceElement = quantityInput.closest('tr').querySelector('.total-price span'); 
    totalPriceElement.textContent = totalPrice.toFixed(2); 

  
    const cartItems = document.querySelectorAll('.quantity-input');
    let subtotal = 0;

    cartItems.forEach(item => {
        const itemQuantity = parseInt(item.value, 10);
        const itemPrice = parseFloat(item.getAttribute("data-price")); 
        subtotal += itemQuantity * itemPrice; 
    });

    
    const shippingCharge = subtotal > 500 ? 50 : 0;
    const total = subtotal + shippingCharge;

    
    document.querySelector('.cart__total .subtotal').textContent = `₹ ${subtotal.toFixed(2)}`;
    document.querySelector('.cart__total .shipping-charge').textContent = `₹ ${shippingCharge.toFixed(2)}`;
    document.querySelector('.cart__total .total').textContent = `₹ ${total.toFixed(2)}`;

   
    const quantities = { [productId]: newQuantity };

    
    fetch('/updateCart', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ quantities }),
    })
    .then(response => response.json())
    .then(data => {
        if (!data.success) {
            console.error('Failed to update cart:', data.message);
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: 'Failed to update cart. Please try again.'
            });
        }
    })
    .catch(error => {
        console.error('Error:', error);
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: 'An error occurred while updating the cart.'
        });
    });
}


        </script>

    
    
    <script>
function removeProduct(productId) {
  
    Swal.fire({
        title: 'Are you sure?',
        text: "You won't be able to revert this!",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#d33',
        cancelButtonColor: '#3085d6',
        confirmButtonText: 'Yes, remove it!'
    }).then((result) => {
        if (result.isConfirmed) {
            fetch('/removeProductFromCart', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ productId }), 
            })
            .then(response => {
                if (!response.ok) {
                    return response.text().then(text => { throw new Error(text); }); 
                }
                return response.json();
            })
            .then(data => {
                if (data.success) {
                    location.reload(); 
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'Failed to remove product from cart.'
                    });
                }
            })
            .catch(error => {
                console.error('Error:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'An error occurred while trying to remove the product.'
                });
            });
        }
    });
}

    

    </script>
    

