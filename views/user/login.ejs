    <link rel="stylesheet" href="stylesheets/nice-select.css" type="text/css" />
    <link
      rel="stylesheet"
      href="stylesheets/owl.carousel.min.css"
      type="text/css"
    />
    <link
      rel="stylesheet"
      href="stylesheets/slicknav.min.css"
