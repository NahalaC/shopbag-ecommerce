<%- include('../partials/adminHeader') %>

<head>
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.css"
  />
  <link rel="stylesheet" href="/admin-assets/css/productsCategory.css" />
</head>

<body>
  <section class="content-main">
    <div class="content-header shadow">
      <div class="d-flex align-items-center justify-content-between col-lg-12">
        <h2 class="content-title card-title col-lg-4">Coupons</h2>
        <a
          href="/admin/addCoupon"
          class="btn shadow border col-lg-2 rounded-0 btn-dark mb-3"
          >Add New Coupon</a
        >
        <header class="card-header text-center bg-transparent col-lg-4">
          <form action="/admin/coupons/" method="get">
            <div
              class="input-group input-group-sm border border-1 rounded-pill shadow"
            >
              <input
                type="text"
                class="form-control border-0 bg-transparent pt-3 ps-3"
                placeholder="Search coupons by name...."
                name="search"
              />
              <button
                class="btn border border-end-0 border-top-0 border-bottom-0 border-3"
                type="submit"
              >
                Search
              </button>
            </div>
          </form>
        </header>
      </div>
    </div>

    <div class="container card py-3 shadow">
      <% if (coupons.length> 0) { %>
      <table class="table table-bordered">
        <thead>
          <tr class="text-center h6">
            <th>Coupon Code</th>
            <th>Offer Price</th>
            <th>Minimum Price</th>
            <th>Expire On</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% coupons.forEach(coupon=> { %>
          <tr id="coupon-<%= coupon._id %>">
            <td><%= coupon.code %></td>
            <td><%= coupon.offerPrice %></td>
            <td><%= coupon.minimumPrice %></td>

            <td><%= new Date(coupon.expireOn).toLocaleDateString() %></td>
            <td>
              <% if (coupon.isActive) { %>
              <span class="badge bg-success">Active</span>
              <% } else { %>
              <span class="badge bg-danger">Inactive</span>
              <% } %>
            </td>
            <td class="d-flex justify-content-evenly">
              <button
                type="submit"
                class="btn btn-warning"
                onclick="event.preventDefault(); toggleCouponStatus('<%= coupon._id %>')"
              >
                <% if (coupon.isActive) { %>Deactivate<% } else { %>- Activate
                -<% } %>
              </button>

              <!-- <button type="button" onclick="deleteCoupon('<%= coupon._id %>')"
                                            class="btn btn-danger">
                                            Delete
                                        </button> -->
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
      <% } else { %>
      <h1 class="d-flex justify-content-center py-5">No Coupons Found</h1>
      <% } %>
    </div>

    <div class="pagination-container">
      <% if (currentPage> 1) { %>
      <a
        href="?page=<%= currentPage - 1 %>"
        class="border border-1 rounded-pill py-1 me-1"
        >&laquo; Previous</a
      >
      <% } %> <% for (let i=1; i <=totalPages; i++) { %> <% if (i===currentPage)
      { %>
      <span
        class="current-page border border-1 rounded-pill py-1 me-1"
        style="background-color: black; color: white"
      >
        <%= i %>
      </span>
      <% } else { %>
      <a href="?page=<%= i %>" class="border border-1 rounded-pill py-1 me-1">
        <%= i %>
      </a>
      <% } %> <% } %> <% if (currentPage < totalPages) { %>
      <a
        href="?page=<%= currentPage + 1 %>"
        class="border border-1 rounded-pill py-1"
        >Next &raquo;</a
      >
      <% } %>
    </div>
  </section>

  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <script>
    function toggleCouponStatus(couponId, isActive) {
      axios
        .patch(`/admin/toggleCoupon/${couponId}`)
        .then((response) => {
          if (response.data.success) {
            Swal.fire({
              toast: true,
              position: "top-end",
              icon: "success",
              title: response.data.message,
              showConfirmButton: false,
              timer: 1500,
            });
            setTimeout(() => {
              location.reload();
            }, 1000);
          } else {
            // Show error if the operation failed
            Swal.fire({
              icon: "error",
              title: "Oops...",
              text: response.data.message,
            });
          }
        })
        .catch((error) => {
          Swal.fire({
            icon: "error",
            title: "Error",
            text: "An error occurred while toggling the coupon status.",
          });
          console.error(error);
        });
    }
  </script>

  <%- include('../partials/adminFooter') %>
</body>
