        <script>
            document.querySelectorAll('.menu-item.has-submenu .menu-link').forEach(link => {
            link.addEventListener('click', function (e) {
                e.preventDefault(); 
        
               
                const parentMenuItem = this.parentElement;
        
               
                parentMenuItem.classList.toggle('active');
        
          
                document.querySelectorAll('.menu-item.has-submenu').forEach(item => {
                    if (item !== parentMenuItem) {
                        item.classList.remove('active');
                    }
                });
            });
        });
        document.addEventListener('click', function (e) {
    const isClickInsideMenu = e.target.closest('.menu-item.has-submenu');

 
    if (!isClickInsideMenu) {
        document.querySelectorAll('.menu-item.has-submenu').forEach(item => {
            item.classList.remove('active');
        });
    }
});



